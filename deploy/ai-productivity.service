[Unit]
Description=AI Productivity Dashboard
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/ai-productivity-dashboard
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ai-productivity
Environment=NODE_ENV=production
Environment=PORT=3003

[Install]
WantedBy=multi-user.target
